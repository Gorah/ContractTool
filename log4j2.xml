<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <RollingFile name="MyFile" fileName="logs\UIError.log" filePattern="logs\UIError-%d{{dd-MM-yyyy}-%i.log">
	  <Policies>
        <OnStartupTriggeringPolicy/>
      </Policies>
      <DefaultRolloverStrategy fileIndex="max" max="3"/>
      <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </RollingFile>
    <RollingFile name="DBFile" fileName="logs\DBError.log" filePattern="logs\DBError-%d{{dd-MM-yyyy}-%i.log">
	  <Policies>
        <OnStartupTriggeringPolicy/>
      </Policies>
      <DefaultRolloverStrategy fileIndex="max" max="3"/>
      <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </RollingFile>
  </Appenders>
  <Loggers>
	<logger name="contract.controller" level="error">
	  <AppenderRef ref="MyFile"/>
	</logger>
    <logger name="contract.repository" level="error">
	  <AppenderRef ref="DBFile"/>
	</logger>
    <Root level="debug">
      <AppenderRef ref="Console" />
      <AppenderRef ref="MyFile" />
      <AppenderRef ref="DBFile" />
    </Root>
  </Loggers>
</Configuration>
